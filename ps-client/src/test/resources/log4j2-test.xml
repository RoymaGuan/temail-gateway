<?xml version="1.0" encoding="utf-8" ?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
  <Appenders>
    <Console name="console" target="sysout">
      <PatternLayout
        pattern="[%date{yyyy-MM-dd HH:mm:ss.SSS}] %highlight{%-5level} [%thread] => %cyan{%logger{1.}}.%method[%file:%line] - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root>
      <AppenderRef ref="console"/>
    </Root>
  </Loggers>
</Configuration>